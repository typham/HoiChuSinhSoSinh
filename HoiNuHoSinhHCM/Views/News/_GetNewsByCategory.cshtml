@model IEnumerable<HoiNuHoSinhHCM.Models.News>
@using HoiNuHoSinhHCM.Models
@{
    int stt = 1;
    string link = "";
}

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        {link = "/tin-tuc/" + @Exts.ToAscii(@item.NewsCategory.Name) + '/' + @Exts.ToAscii(item.Name);}
        if (stt == 1)
        {
            
            <article class="featured">
                <h1><a href="@link">@item.Name</a></h1>
                <a href="@link"><img class="thumbnail" src="@item.Image" alt=""></a>
                <p>@item.Summary</p>
            </article>
        }
        else
        {
            <article>
                <i class="glyphicon glyphicon-triangle-right"></i><a href="@link">@item.Name</a>
            </article>
        }
        stt++;
    }
}
