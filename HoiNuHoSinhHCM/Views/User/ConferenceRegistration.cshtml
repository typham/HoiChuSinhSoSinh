@model HoiNuHoSinhHCM.Models.Conference
@{
    ViewBag.Title = "ConferenceRegistration";
}

<fieldset class="col-md-7">
    <legend>Đăng ký hội nghị</legend>
    @using (Html.BeginForm("ConferenceRegistration", "User", FormMethod.Post))
    {
        if (ViewBag.success)
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <strong>Thông báo:</strong> Đăng ký thành công
            </div>    
        }
        
        <div class="form-group">
            <label>Hội nghị</label>
            @Html.DropDownList("ConferenceId", null, new {@class="form-control"})
        </div>
        <div class="form-group">
            <label>Họ tên</label>
            @Html.TextBoxFor(i => i.MemberName, null, new {@class="form-control" })
            @Html.ValidationMessageFor(i=>i.MemberName)
        </div>
        <div class="form-group">
            <label>Ngày sinh</label>
            @Html.TextBoxFor(i => i.Birthday, null, new { @class = "form-control", @type="date"})
            @Html.ValidationMessageFor(i => i.Birthday)
        </div>
        <div class="form-group">
            <label>Giới tính</label>
            @Html.CheckBoxFor(i => i.Gender)
        </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            @Html.TextBoxFor(i => i.PhoneNumber, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.PhoneNumber)
        </div>
        <div class="form-group">
            <input type="submit" value="Đăng ký" class="btn btn-primary" />
        </div>
    }
</fieldset>

@section scripts{
<style>
    .field-validation-error {
        color: #f00;
    }
    </style>
}